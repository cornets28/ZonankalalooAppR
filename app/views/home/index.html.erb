    <section class="blog-area pt-90 pb-90" id="recentdiscussion" >
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="section-title text-center" style="padding-top: 90px;">
                        <h2> LES PLUS RECENTES <span>DISCUSSIONS</span></h2>
                        <img src="img/title-bottom.png" alt="">
                        <p>Il y en a d'autres articles et discussions. Cliquez sur <a href="/discussions">DISCUSSIONS</a> pour les voir.</p>
                    </div>
                </div>
                       
                <div class="blog">
                    <% @discussions[0..2].each do |discussion| %>
                        <div class="col-sm-4">
                            
                                <div class="single-blog mb-30"> 
                                    <div class="blo-image-and-date" id="blo-image">
                                        <% parameterizeTitle = '/discussions/' %>
                                        <a class="transparent-cover" style="background: transparent; z-index: 0; width: 100%; height: 100%;" href="<%= parameterizeTitle += discussion.title.parameterize %>" ></a> 
                                        <%= image_tag discussion.image if discussion.image.attached? %>
                                        <% if discussion.channel %>
                                            <%= link_to discussion.channel.channel, discussion.channel %>
                                        <% end %>    
                                    </div>
                                    <div class="blog-info">
                                        <div class="admin">
                                            <a href="#"><i class="fa fa-user" aria-hidden="true"></i> Ot√®: <%= discussion.user.username %> <%= discussion.user.userlastname %> </a>
                                        </div>
                                        <div class="comment">
                                            <a href="#"><i class="fa fa-heart" aria-hidden="true"></i> 88</a>
                                            <a href="#"><i class="fa fa-comment" aria-hidden="true"></i> 25</a>
                                        </div>
                                    </div>
                                    <div class="blog-text">
                                        <h3>
                                            <%= link_to discussion do %>
                                                <%= truncate(discussion.title, length: 35) %>
                                            <% end %>
                                        </h3>
                                        <%= truncate(strip_tags(discussion.content.to_s), length: 180) %>
                                        <p>
                                            <em>
                                                <small>
                                                    Cet articles est ecrit depuis <%= time_ago_in_words(discussion.created_at) %>, Categorie
                                                    <% if discussion.channel %>
                                                        <%= link_to discussion.channel.channel, discussion.channel %>
                                                    <% end %>
                                                </small>
                                            </em>
                                        </p>
                                        <% if discussion_author(discussion) || has_role?(:admin) %>
                                            <div class="column has-text-left"> 
                                                <%= link_to edit_discussion_path(discussion) do %>
                                                    <span class="icon is-small"><i class="fa fa-pencil"></i></span>
                                                <% end %> |
                                                <%= link_to discussion, method: :delete, data: {confirm: "Wap efase 'l tout bon?" } do %>
                                                    <span class="icon is-small"><i class="fa fa-trash-o"></i></span>
                                                <% end %>
                                            </div>
                                        <% else %>
                                            <div class="column has-text-left">
                                                <span class="icon is-small"><i class="fa fa-hand-o-right" aria-hidden="true"></i></span>
                                            </div> 
                                        <% end %>
                                        <%= link_to discussion do %>
                                            <p style="margin-top: -2rem; float:right !important; margin-bottom: 0rem;"> Les Details...</p>
                                        <% end %>
                                        
                                    </div>      
                                </div> 
                          
                        </div>                       
                    <% end %> 
                </div>
            </div>
        </div>
    </section>
           

